<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- LinearLayout para envolver a imagem e o texto -->
    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rouded_backgroud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <!-- ImageView para exibir a imagem -->
        <ImageView
            android:id="@+id/imageViewPdf"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/pdf_image"
            android:layout_marginEnd="2dp"/>

        <!-- TextView para exibir o nome do PDF -->
        <TextView
            android:id="@+id/textViewPdfName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:gravity="start|center_vertical"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
